<h1 class="text-center">Patient charts</h1>
<%= render 'layouts/identifier' %>

<%= link_to 'New Chart', new_regi_chart_path, class: "btn btn-outline-dark m-1" %>
<%= link_to 'Patient Record', regi_patients_path, class:"btn btn-outline-success m-1" %>
<%= link_to 'Patient Listing', regis_path, class:"btn btn-outline-primary m-1" %>

<table class="table table-striped table-hover mt-1">
  <thead class="table-primary">
    <tr>
      <th style="width:105px">Updated on</th>
      <th>S.O.A.P.</th>
      <th>Acupoints</th>
      <th>Medicines</th>
      <th>Formulae</th>
      <th>Other</th>
    </tr>
  </thead>
  </tbody>
    <% @regi.charts.order("tDate DESC").each do |chart| %>
      <tr style="height:15px">
        <td><%= link_to chart.tDate, regi_chart_path(@regi,chart)  %></td>
        <td style="overflow: hidden"><%= chart.soap %></td>
        <td><%= chart.acuList %></td>
        <td><%= chart.cMedList %></td>
        <td><%= chart.cForList %></td>
        <td><%= chart.oTreats %></td>
      </tr>
    <% end %>
  </tbody>
</table>
