<% @c = Chart.where(regi_id: params[:regi_id]).order('t_date DESC') %>

<%= form_with(model: [@regi,@chart]) do |f| %>
  
   <% if @chart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chart.errors.count, "error") %> prohibited this chart from being saved:</h2>

      <ul>
      <% @chart.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col col-md-2">
      <b>Updated on</b>
      <%= f.date_field :t_date, value:@c.last.t_date, class:"form-control form-control-sm border-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <b>Acupoints Used</b>
      <%= f.text_field :acu_list, value:@c.last.acu_list, class:"form-control form-control-sm border-primary" %>
    </div>
    <div class="col">
      <b>Chinese Medicines</b>
      <%= f.text_field :c_med_list, value:@c.last.c_med_list, class:"form-control form-control-sm border-primary" %>
    </div>
    <div class="col">
      <b>Formulae</b>
      <%= f.text_field :c_for_list, value:@c.last.c_for_list, class:"form-control form-control-sm border-primary" %>
    </div>
    <div class="col">
      <b>Other Treatments</b>
      <%= f.text_field :o_treats, value:@c.last.o_treats, class:"form-control form-control-sm border-primary" %>
    </div>
  </div>

  <div class="col">
    <b>S.O.A.P.</br>
    <%= f.text_area :soap, value:@c.last.soap, class:"form-control form-control-sm border-primary", style:"height: 100px" %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class:'btn btn-primary btn-sm mt-3 me-3 ps-3 pe-3 rounded-pill' %>
<% end %>
  <%= link_to 'Retun', regi_charts_path(@regi), class: 'btn btn-success btn-sm mt-3 ps-3 pe-3 rounded-pill' %>
  </div>