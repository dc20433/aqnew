      <%= form_with(model: user) do |f| %>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
              <b><%= f.label :name, class:'pt-2' %></b>
            </div>
            <div class='col-10'>
              <%= f.text_field :name, class:'form-control border-primary' %>
            </div>
        </div>
        
        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
             <b><%= f.label :userNm, "Username", class:'pt-2' %></b>
            </div>
            <div class='col-10'>
              <%= f.text_field :userNm, class:'form-control border-primary' %>
            </div>
        </div>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
             <b><%= f.label :email, class:'pt-2' %></b>
            </div>
            <div class='col-10'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control border-primary' %>
            </div>
        </div>

        <div class="btn-group" role="group"> 
          <%= f.submit "Update User", class:'btn btn-sm btn-primary mt-2 mb-2' %>
      <% end %>
        <%= button_to "Delete", @user, method: :delete, class:"btn btn-sm btn-danger m-2" %>
        <%= link_to "Return", users_path, class:"btn btn-sm btn-success m-2" %>
        </div>
    </div>
