<div class="col-4 mx-auto mt-3">
  <div class="card shadow border-dark">
    <div class="card-header">
      <h3 class="card-title text-center">Change your password</h3>
    </div>
    <div class="card-body">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class='form-group'>
        <%= f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control form-control-sm border-dark mb-3" %>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-sm border-dark mb-3" %>
      </div>

      <div class='form-group'>
        <%= f.submit "Change my password", class:'btn btn-sm btn-primary mt-1 mb-3' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>


    </div>
  </div>
</div>






