<div class="col-4 mx-auto mt-3">
  <div class="card shadow border-dark">
    <div class="card-header">
      <h2 class="card-title text-center">Sign up</h2>
    </div>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-2'>
              <%= f.label :email, class:'pt-2' %>
            </div>
            <div class='col-10'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control border-primary' %>
            </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control border-primary mb-2' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control border-primary mb-2' %>
        </div>

        <div class="actions">
          <%= f.submit "Submit", class:'btn btn-sm btn-primary mt-2 mb-2' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>





