<div class="col-4 mx-auto mt-3">
  <div class="card shadow border-dark">
    <div class="card-header">
      <h2 class="card-title text-center">Log in</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-3'>
              <%= f.label :email, class:'pt-2' %>
            </div>
            <div class='col-9'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control border-primary' %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <div class='row mb-3'>
            <div class='col-3'>
              <%= f.label :password, class:'pt-2' %>
            </div>
            <div class='col-9'>
              <%= f.password_field :password, autocomplete: "current-password", class:'form-control border-primary' %>
            </div>
          </div>
        </div>
       
        <% if devise_mapping.rememberable? %>
          <div class='form-group'>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Submit", class:'btn btn-sm btn-primary mt-2 mb-2' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


